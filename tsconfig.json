{
  "compileOnSave": true,
  "strict": true,
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "dom", "es2015.promise"],
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
