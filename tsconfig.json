{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
