{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "api/**/*",
    "cli-client/**/*",
    "../infrastructure/**/*"
  ]
}
